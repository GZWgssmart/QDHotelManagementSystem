<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.zywork.dao.ServiceSubjectDAO">
    <resultMap id="serviceSubjectMap" type="serviceSubjectVo"></resultMap>
    <sql id="Base_Column_List">id, title,description,create_time,is_active</sql>
    <select id="getById" resultMap="serviceSubjectMap" parameterType="long">
        select
        <include refid="Base_Column_List"/>
        from t_service_subject where id = #{id}
    </select>
    <delete id="removeById" parameterType="long">
        delete from t_service_subject where id = #{id}
    </delete>
    <select id="listPage" resultMap="serviceSubjectMap">
        select * from t_service_subject limit #{pageNo},#{pageSize}
    </select>
    <select id="thisAll" resultMap="serviceSubjectMap">
        select * from t_service_subject
    </select>
    <select id="count" resultType="long">
        select count(*) from t_service_subject
    </select>
    <select id=""></select>
    <insert id="save" parameterType="serviceSubjectVo">
        insert into t_service_subject ( title,description,is_active) values ( #{title},#{description},#{isActive})
    </insert>
    <update id="updateStatus">
        update t_service_subject set is_active=#{status} where id=#{id}
    </update>
    <update id="update">
        update t_service_subject
        <set>
            <if test="title!=null and title!=''">
                title = #{title},
            </if>
            <if test="description!=null and description!=''">
                description = #{description},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>